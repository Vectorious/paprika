{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Run build.bat",
            "command": "./build.bat",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern":{
                    "regexp": "^([^\\s].*)\\((\\d+,\\d+)\\):\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "owner": "cpp"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}